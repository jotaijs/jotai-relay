{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "jotai-relay": ["./src"]
    },
    "outDir": "./dist",
    "skipLibCheck": true
  }
}
